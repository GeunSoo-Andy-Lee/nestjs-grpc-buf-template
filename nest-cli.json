{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "webpack": false
  },
  "projects": {
    "auth-server": {
      "type": "application",
      "root": "apps/auth-server",
      "entryFile": "main",
      "sourceRoot": "apps/auth-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-server/tsconfig.app.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "proto": {
      "type": "library",
      "root": "libs/proto",
      "entryFile": "index",
      "sourceRoot": "libs/proto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/proto/tsconfig.lib.json",
        "assets": ["proto/**/*.proto"],
        "watchAssets": true
      }
    }
  }
}